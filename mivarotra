    <script>
        // Select reaction from buttons
        function selectReaction(type) {
            document.getElementById('reactionType').value = type;
            
            // Highlight selected button
            document.querySelectorAll('.reaction-btn').forEach(btn => {
                btn.classList.remove('ring-2', 'ring-purple-500');
            });
            event.currentTarget.classList.add('ring-2', 'ring-purple-500');
        }
        
        // FAQ accordion
        document.querySelectorAll('.faq-question').forEach(question => {
            question.addEventListener('click', () => {
                const answer = question.nextElementSibling;
                const icon = question.querySelector('i');
                
                // Toggle answer visibility
                answer.classList.toggle('hidden');
                
                // Rotate icon
                icon.classList.toggle('transform');
                icon.classList.toggle('rotate-180');
            });
        });
        
        // Form submission
        document.getElementById('orderForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Get form values
            const reactionType = document.getElementById('reactionType').value;
            const quantity = document.getElementById('quantity').value;
            const postUrl = document.getElementById('postUrl').value;
            const payerName = document.getElementById('payerName').value;
            const paymentDate = document.getElementById('paymentDate').value;
            
            // Validate quantity for 2000+
            if (quantity >= 2000) {
                alert('Pour des commandes de plus de 2 000 réactions, veuillez nous contacter directement.');
                return;
            }
            
            // Calculate price
            let price = 0;
            if (quantity == 100) price = 600;
            else if (quantity == 500) price = 1500;
            else if (quantity == 1000) price = 3000;
            
            // Show confirmation
            alert(`Commande confirmée!\n\nType: ${reactionType}\nQuantité: ${quantity}\nPrix: ${price} Ar\n\nVeuillez effectuer le paiement au 0341953786 et nous vous contacterons dès confirmation.`);
            
            // Reset form
            this.reset();
        });
        
        // Set current datetime for payment date
        document.getElementById('paymentDate').value = new Date().toISOString().slice(0, 16);
    </script>
